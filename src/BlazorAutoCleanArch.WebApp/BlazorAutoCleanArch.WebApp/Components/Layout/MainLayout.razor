@inherits LayoutComponentBase
@using BlazorAutoCleanArch.WebApp.Helpers

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <nav class="navbar bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><i class="bi bi-spotify"></i></a>

                <AuthorizeView>
                    <Authorized>
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle"
                               id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="@GravatarHelper.ObterGravatarUrl(context.User.Identity?.Name ?? "", 40)"
                                     width="40"
                                     height="40"
                                     class="rounded-circle me-2">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="dropdownUser">
                                <li>
                                    <a class="dropdown-item" href="Account/Manage">
                                        <i class="bi bi-person me-2"></i>Meu Perfil
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form action="Account/Logout" method="post">
                                        <AntiforgeryToken />
                                        <input type="hidden" name="ReturnUrl" value="" />
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right me-2"></i>Sair
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="d-flex gap-2">
                            <a href="Account/Login" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                            <a href="Account/Register" class="btn btn-primary btn-sm">
                                <i class="bi bi-person-plus"></i> Registrar
                            </a>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </nav>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
